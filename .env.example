# Vedic Wisdom Weekly — Environment Variables
# Copy to .env and fill in your values

# Supermemory (optional — for long-term memory sync)
SUPERMEMORY_API_KEY=sm_your_key_here

# MLflow tracking (local dev uses sqlite, CI uses EC2)
# Local:  sqlite:///mlflow.db
# EC2:    http://<EC2_PUBLIC_IP>:5000
MLFLOW_TRACKING_URI=sqlite:///mlflow.db
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1

# Slack Incoming Webhook (for weekly notifications)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/T.../B.../xxx
# Slack member ID to @mention when observances exist
SLACK_MEMBER_ID=UXXXXXXXXXX
# DrikPanchang API (future)
# DRIK_API_KEY=your_key_here
